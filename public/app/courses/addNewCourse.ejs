<div class="container" ng-controller="addNewCourseCtrl" style=" margin:40px;">
    <div class="jumbotron">
    <form name="addNewCourseForm" class="form-horizontal">
        <fieldset ><legend class="row text-center">Add New Course</legend>
        <div class="form-group">
            <label for="email" class="col-md-2 control-label">Course Title</label>
            <div class="col-md-10">
                <input name="name" type="text" placeholder="Title" ng-model="name" required="required" class="form-control"/>
            </div>
        </div>
        <div class="form-group">
            <label for="password" class="col-md-2 control-label">Category</label>
            <div class="col-md-10">
                <input name="category" type="text" placeholder="Category" ng-model="category" required="required" class="form-control"/>
             </div>
         </div>
         <div class="form-group">
             <label for="level" class="col-md-2 control-label">Course Level</label>
             <div class="col-md-10">
                 <select name="level" ng-model="level" type="text"  required="required" class="form-control">
                  <option value="0">Select One</option>
                  <option value="Begginer">Begginer</option>
                  <option value="Intermediate">Intermediate</option>
                  <option value="Advance">Advance</option>
                 </select>
             </div>
        </div>

<div class="form-group">
            <label for="password" class="col-md-2 control-label">Instructor</label>
            <div class="col-md-10">
                <input name="Instructor" type="text" placeholder="Instructor" ng-model="instructor" required="required" class="form-control"/>
             </div>
         </div>    
        <div class="form-group">
            <div class="col-md-10 col-md-offset-2">
                <div class="pull-right"><button ng-click="addCourse()" ng-disabled="addNewCourseForm.$invalid" class="btn btn-primary">Submit</button>
                &nbsp;<a ui-sref="main" class="btn btn-default">Cancel</a></div></div></div>
    </fieldset>
    </form>
    </div>
</div>