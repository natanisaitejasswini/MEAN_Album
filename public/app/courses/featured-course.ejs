<div class="courses_list ">
    <div class="jumbotron">
        <div class="row" style="margin-bottom: 10px;">
             <div class="col-sm-4">
               <h4 style="color:#fff">Search Available Courses</h4>
            </div>
            <div class="col-sm-8">
            <input class="form-control" ng-model="searchText", placeholder="Search Courses">
            </div>
             <!--<div class="col-sm-3">
                <select class="form-control"  ng-model="courseCategory" ng-options="courseCategory for courseCategory in category ">
                </select>
            </div>
            <div class="col-sm-3">
                <select class="form-control"  ng-model="sortOrder"
                 ng-options="level.value as level.text for level in sortOptions" >
                </select>
            </div>-->
             
        </div>
         <ul class="thumbnail" ng-repeat="course in courses | filter:searchText | orderBy:sortOrder | selectedLevelTags:selectedLevel | selectedTags:selected | limitTo:itemsLimit()">
        <li><h4 class="row">
            <span class="col-sm-8 pull-left">{{course.name}}</span>
               <span  class="col-sm-4 pull-right">{{course.published | date}} </span>
           </h4>
        </li>
   <li><h6 class="row">
       <span class="col-sm-4 pull-left">Category: {{course.category}}</span>
       <span class="col-sm-4">Instructor :{{course.instructor}}</span>
       <span class="col-sm-4 pull-right">Level : {{course.level}}</span>
       </h6>
    </li>
    </ul>
 	
    <button style="padding-top:3px; padding-bottom:3px " class="btn btn-primary btn-block" ng-show="hasMoreItemsToShow()" ng-click="showMoreItems()">Show more</button>   
    </div>
    
</div>

