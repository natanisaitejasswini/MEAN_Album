
      <div class="app__body accordion">
        <h4>Filter Courses</h4>
        <div class="app__accordions">
          <div class="app__accordion">
            <div class="accordion__head">
              <div class="accordion__title">Category</div>
              <div class="accordion__icon"></div>
            </div>
            <div class="accordion__content" >
                 <div ng-repeat="item in categorys">
            
                  <input type= "checkbox" ng-checked="exists(item, selected)" ng-click="toggle(item, selected)"/>
                    {{ item }}
                 </div>
            </div>
          </div>
          <div class="app__accordion">
            <div class="accordion__head">
              <div class="accordion__title">Level</div>
              <div class="accordion__icon"></div>
            </div>
            <div class="accordion__content">
               <div ng-repeat="levelsItem in levels">
                  <input type= "checkbox" ng-checked="exists(levelsItem, selectedLevel)" ng-click="toggle(levelsItem, selectedLevel)"/>
                    {{ levelsItem }}

                </div>     </div>
          </div>
        </div>
      </div>

