
     <div class="col-sm-3">
  <div class="app__body accordion">
        <h4>Filter Events By</h4>
        <div class="app__accordions">
          <div class="app__accordion">
            <div class="accordion__head">
              <div class="accordion__title">Type</div>
              <div class="accordion__icon"></div>
            </div>
            <div class="accordion__content" >
                 <div ng-repeat="type in typeGroup">
            <b><input type="checkbox" ng-model="useType[type]"/>{{type}}</b>
            <span>({{(filteredEvents | filter:type).length}})</span>
        </div>
            </div>
          </div>
          <div class="app__accordion">
            <div class="accordion__head">
              <div class="accordion__title">State</div>
              <div class="accordion__icon"></div>
            </div>
            <div class="accordion__content">
                  <div ng-repeat="state in stateGroup">
            <b><input type="checkbox" ng-model="useState[state]"/>{{state}}</b>
            <span>({{(filteredEvents | filter:state).length}})</span>
        </div>    
                 </div>
          </div>
              <div class="app__accordion">
            <div class="accordion__head">
              <div class="accordion__title">City</div>
              <div class="accordion__icon"></div>
            </div>
            <div class="accordion__content" >
                 <div ng-repeat="city in cityGroup">
            <b><input type="checkbox" ng-model="useCity[city]"/>{{city}}</b>
            <span>({{(filteredEvents | filter:city).length}})</span>
        </div>
            </div>
          </div>
        </div>
      </div>
     </div>

<div class="col-sm-9">
<div class="courses_list ">
    <div class="jumbotron row" style="margin-bottom: 0px;">
        <div class="row" style="margin-bottom: 10px;">
             <div class="col-sm-3">
               <h4 style="color:#fff">Search</h4>
            </div>
            <div class="col-sm-5">
            <input class="form-control" ng-model="searchEventText", placeholder="Search Events">
            </div>
              <div class="col-sm-4">
            <button ui-sref="addNewEvent" style="padding-top:3px; padding-bottom:3px" class="btn btn-primary">Add New Event</button>
            </div>
        </div>
         <ul class="thumbnail" ng-repeat="event in filteredEvents.slice(((currentPage-1)*itemsPerPage), ((currentPage)*itemsPerPage)) | filter:searchEventText" >
        <li><div class="row">

            <!--<div class="col-sm-2 checkbox" style="background-color:#4E5D73 "> 
                <input class="form-control" type="checkbox"/> 
                </div>-->
          <div class="col-sm-10">
              
            <h4 class="pull-left"><span class="glyphicon glyphicon-circle-arrow-right"></span>&nbsp; {{event.title}}</h4>
            <h4 class="pull-right"><span class="glyphicon glyphicon-calendar"></span>&nbsp; {{event.date | date}}</h4>
          </div>
         
             <div class="col-sm-2">
               
            <!--<button ui-sref="updateEvent" style="border-radius:100% ; padding:3px 8px 3px 8px;margin-top:5px" ng-click=editEvent(event._id) class="btn btn-info"><span class="glyphicon glyphicon-edit"></span> </button>-->
           </div>
        </li>
   <li><h6 class="row">
       <span class="col-sm-4 pull-left">Event Type : {{event.type}}</span>
       <span class="col-sm-4">Location : {{event.city}}, {{event.state}}</span>
       <span class="col-sm-4 pull-right">Attendees : {{event.attendees}}</span>
       </h6>
    </li>
     
    </ul>
    
 	</div>
   <div class="row">
<pagination total-items="totalItems" ng-model="currentPage" ng-change="pageChanged()" 
  class="pagination-sm" items-per-page="itemsPerPage">
</pagination>

   </div>
    
</div>

</div>

